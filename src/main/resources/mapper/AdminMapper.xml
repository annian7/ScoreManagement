<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newer.dao.AdminDao">

    <resultMap type="com.newer.entity.Admin" id="AdminMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="birthday" column="birthday" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AdminMap">
        select
          id, password, name, sex, birthday
        from ScoreManagement.admin
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AdminMap">
        select
          id, password, name, sex, birthday
        from ScoreManagement.admin
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AdminMap">
        select
          id, password, name, sex, birthday
        from ScoreManagement.admin
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="birthday != null">
                and birthday = #{birthday}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into ScoreManagement.admin(password, name, sex, birthday)
        values (#{password}, #{name}, #{sex}, #{birthday})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ScoreManagement.admin
        <set>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ScoreManagement.admin where id = #{id}
    </delete>
    <!--通过查询id 密码完成登录操作-->
    <select id="findAdminById" resultType="com.newer.entity.Admin">
   select *
	from ScoreManagement.admin
	where id=#{id}
	and password=#{password}
    </select>

    <!-- 添加学生-->
    <insert id="addStudent"  parameterType="com.newer.entity.Student">
INSERT INTO ScoreManagement.student
VALUES(#{id},#{password},#{name},#{sex},#{birthday},#{college.id},#{major.id},#{shift.id})
    </insert>
    <!-- 添加教师 -->
    <insert id="addTeacher"  parameterType="com.newer.entity.Teacher">
INSERT INTO ScoreManagement.teacher
VALUES(#{id},#{password},#{name},#{sex},#{birthday},#{college.id})
    </insert>
</mapper>